#-----------------------------------------------------------
#form系
#-----------------------------------------------------------
snippet hidden
  f.hidden_field :${1}, value: ${2}

snippet controller
  controller:

snippet form_for
abbr @---
  form_for (@${1}) do | f |
    == render '${2}_fields', f: f
    = f.submit

snippet form_with
  form_with model: @${1} do |f|
    = submit_tag

snippet form_for_set
abbr controller
  form_for (controller: :${1}, action: :${2}) do | f |
    == render '${3}_fields', f: f
    = f.submit
#-----------------------------------------------------------
#CSS系
#-----------------------------------------------------------
snippet table
  table
    thead
      tr
        th ${1}
    tbody
      tr
        td ${2}
#-----------------------------------------------------------
#メソッド系
#-----------------------------------------------------------
snippet length
  length

snippet #t
  #{t("${0}")}


#-----------------------------------------------------------
#単語系
#-----------------------------------------------------------
snippet ten
  ・${0}

snippet mei
options word
  名

snippet kara
options word
  ～

#-----------------------------------------------------------
#補助
#-----------------------------------------------------------
snippet comment
abbr new
  -----------------------------------------------------------
  ${1}
  -----------------------------------------------------------
    #${2}
          ${0}

snippet com_t
abbr TARGET
  -----------------------------------------------------------
  ${1:TARGET}
  -----------------------------------------------------------
    #${2}
          ${0}

snippet "#"
  "#{${0})}"

#-----------------------------------------------------------
#class系
#-----------------------------------------------------------
snippet hclass
abbr h class
options word
  h${1} class="${2}" ${3}

snippet pclass
options word
  p class="${1}" ${2}

#-----------------------------------------------------------
#URL
#-----------------------------------------------------------
snippet link
abbr    link_path
  link_to "${1:TARGET}", ${2}_path

#-----------------------------------------------------------
#読み込み系
#-----------------------------------------------------------
snippet javascript
  = javascript_include_tag "${1:TARGET}", :media => "all"
  ${0}

